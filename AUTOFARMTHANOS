--// UI AUTO NPC
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local Text = Instance.new("TextLabel", ScreenGui)

Text.Size = UDim2.new(1,0,0,80)
Text.Position = UDim2.new(0,0,0,0)
Text.BackgroundTransparency = 1
Text.Text = "AUTO NPC"
Text.TextScaled = true
Text.Font = Enum.Font.GothamBlack
Text.TextColor3 = Color3.new(1,0,0)
Text.ZIndex = 999999

--// Setup
local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local EnemiesFolder = workspace:WaitForChild("Enemies")

---------------------------------------------------------------------
-- üî• 1) AUTO TP T·∫§T C·∫¢ NPC (t√™n c√≥ ch·ªØ ‚ÄúNPC‚Äù)
---------------------------------------------------------------------
task.spawn(function()
    while task.wait() do
        for _, mob in ipairs(EnemiesFolder:GetDescendants()) do
            if mob:IsA("Model")
            and mob:FindFirstChild("HumanoidRootPart")
            and string.find(mob.Name:lower(), "npc") then

                local mobHRP = mob.HumanoidRootPart
                local newPos = mobHRP.Position + Vector3.new(0, 6, 0) -- 6 stud tr√™n ƒë·∫ßu

                hrp.CFrame = CFrame.new(newPos)
            end
        end
    end
end)

---------------------------------------------------------------------
-- üî• 2) SPAM FIRE REMOTE LI√äN T·ª§C
---------------------------------------------------------------------
task.spawn(function()
    while task.wait() do
        -- Ch·ªù nh√¢n v·∫≠t c√≥ The Casket Remote
        local c = player.Character or player.CharacterAdded:Wait()
        local tool = c:FindFirstChild("The Casket")

        if tool and tool:FindFirstChild("Remote") then
            local args = {
                Enum.KeyCode.E
            }
            tool.Remote:FireServer(unpack(args))
        end
    end
end)